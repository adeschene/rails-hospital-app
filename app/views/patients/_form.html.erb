<%# Create a form for doctor that has placeholders %>
<%= form_with model: patient do |form| %>
  <div class="form-group mb-3">
    <%= form.text_field :name, class: "form-control mb-2", placeholder: "Name" %>
    <div class="input-group mb-2">
      <span class="input-group-text">Date of Birth</span>
	  <%= form.date_field :dob, class: "form-control" %>
	</div>
    <div class="form-check pt-1">
      <%= form.check_box :is_insured, {class: "form-check-input"} %>
      <%= form.label :is_insured, "Patient Insured?", class: "form-check-label" %>
    </div>
  </div>

  <div class="form-group ms-2">
    <%= form.submit "Submit", class: "btn btn-secondary mb-3" %>
  </div>
<% end %>