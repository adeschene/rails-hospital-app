<%# Display the appt and give the option to edit and delete it %>
<div class="card w-100 mt-5 mb-5 mx-auto text-dark bg-light">
  <div class="card-header fs-5 fw-bold py-3 text-center">
  	Appointment Details
  </div>
  <div class="card-body mb-1">
    <dl class="row">
      <dt class="col-sm-2 text-nowrap">Patient:</dt>
      <dd class="col-sm-10"><%= link_to @appointment.patient.name, @appointment.patient, class: 'btn btn-sm btn-outline-secondary' %></dd>
      <dt class="col-sm-2 text-nowrap">Doctor:</dt>
      <dd class="col-sm-10"><%= link_to @appointment.doctor.name, @appointment.doctor, class: 'btn btn-sm btn-outline-secondary' %></dd>
      <dt class="col-sm-2 text-nowrap">Date:</dt>
      <dd class="col-sm-10"><%= @appointment.date %></dd>
      <dt class="col-sm-2 text-nowrap">Start Time:</dt>
      <dd class="col-sm-10"><%= @appointment.start_time %></dd>
      <dt class="col-sm-2 text-nowrap">End Time:</dt>
      <dd class="col-sm-10"><%= @appointment.end_time %></dd>
    </dl>
    <div class="card mb-2">
      <div class="card-header">
        Issue Description:
      </div>
      <div class="card-body">
        <p class="card-title"><%= simple_format(@appointment.issue) %></p>
      </div>
    </div>
    <div class="ms-2">
	  <%= link_to "Edit", edit_appointment_path(@appointment), class: 'btn btn-secondary px-4 mx-1' %>
	  <%= link_to "Delete", appointment_path(@appointment), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger mx-1' %>
	</div>
  </div>
</div>